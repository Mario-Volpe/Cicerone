<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cicerone" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logoc"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logoc"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning" >
        <activity android:name=".data.ToCicerone" >
        </activity>
        <activity android:name=".data.DettagliFeedback" />
        <activity android:name=".data.GestioneRichiesta" />
        <activity android:name=".data.DettaglioRichieste" />
        <activity android:name=".data.DettagliAttivita" />
        <activity android:name=".data.ElencoAttivita" />
        <activity android:name=".data.Creazione" />
        <activity android:name=".data.FormRicerca" />
        <activity android:name=".data.Cerca" />
        <activity
            android:name=".data.HomeActivity"
            android:label="@string/title_activity_home" />
        <activity android:name=".data.RegistrationActivity" />
        <activity
            android:name=".data.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".data.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".data.ElencoFeedback" /> <!-- suppress AndroidDomInspection -->
        <service android:name=".data.SendIt" />
    </application>

</manifest>